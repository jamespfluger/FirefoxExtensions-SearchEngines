{
  "manifest_version": 2,
  "name": "Dictionary.com Search Shortcut",
  "description": "Adds Dictionary.com to the list of search engine shortcuts",
  "version": "1.0.0",
  "icons": {
    "48": "icons/dictionary_48.png",
    "96": "icons/dictionary_96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0"
    }
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Dictionary.com",
      "search_url": "https://www.dictionary.com/browse/{searchTerms}?s=t",
      "keyword": "dict",
      "favicon_url": "https://www.dictionary.com/assets/favicon-d73532382d3943b0fef5b78554e2ee9a.png",
      "is_default": false
    }
  }
}
