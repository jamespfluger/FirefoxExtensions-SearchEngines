{
  "manifest_version": 2,
  "name": "YouTube search engine",
  "description": "Adds a search engine that searches YouTube",
  "version": "1.0.0",
  "icons": {
    "48": "icons/youtube_48.png",
    "96": "icons/youtube_96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0"
    }
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "YouTube",
      "search_url": "https://www.youtube.com/results?search_query={searchTerms}",
      "keyword": "yt",
      "favicon_url": "https://www.youtube.com/s/desktop/a57d6b77/img/favicon_32.png",
      "is_default": false
    }
  }
}
